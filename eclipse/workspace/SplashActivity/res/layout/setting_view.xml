<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay_bg" >

	<RelativeLayout
	    android:id="@+id/view_setting_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/bg_title" >

	    <Button
	        android:id="@+id/btn_setting_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_gravity="center"
	        android:background="@drawable/bg_button_ok" />

	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:textSize="22dp"
	        android:text="Accept Payment" />
	        
    </RelativeLayout>
    
	<LinearLayout
	    android:id="@+id/view_setting_container"
	    android:layout_below="@id/view_setting_top"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="100dp"
	    android:layout_marginRight="100dp"
	    android:layout_marginTop="50dp"
	    android:layout_marginBottom="50dp"
	    android:paddingTop="50dp"
	    android:paddingBottom="50dp"
	    android:orientation="vertical" >
	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:textSize="22dp"
	        android:hint="Customer (optional)" />
	    	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:layout_marginTop="20dp"
	        android:textSize="22dp"
	        android:hint="Enter Account" />

	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="20dp"
	        android:layout_marginTop="20dp"
	        android:textSize="22dp"
	        android:hint="Invoice (optional)" />

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="40dp"
		    android:orientation="horizontal" >
		    
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="@drawable/charge_btn" />

			<Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/recent_btn" />
			
			<Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/refund_btn" />

			<Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/void_btn" />
			
	    </LinearLayout>

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginTop="50dp"
		    android:scaleType="fitXY"
		    android:background="@drawable/powered_by" />
		
	</LinearLayout>
	
</RelativeLayout>
